{%extends "::base.html.twig"%}

{% block body %}
    <div class="container-fluid" id="voiture_detail">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default  panel--styled">
                    <div class="panel-body">
                        <div class="col-md-12 panelTop">
                            <div class="col-md-4">
                                <img class="img-responsive" src="/KZC/web/uploads/images/voitures/{{ Voitures.image }}" alt=""/>
                            </div>
                            <div class="col-md-8">
                                <h2>{{ Voitures.marque }}</h2>
                                <h4>{{ Voitures.modele }}</h4>
                                <div class="row">
                                    <div class="col-md-6">
                                        <p>{{ Voitures.description | raw }}</p>
                                    </div>
                                    <div class="col-md-6">
                                        <ul style="list-style: none;">
                                            {% for options in Option %}
                                                <li><i class="fa fa-check text-success" aria-hidden="true"></i> {{ options.nom }}</li>
                                            {% endfor %}

                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 panelBottom">
                            <div class="col-md-3 text-center">
                                <button class="btn btn-add-to-cart"><span class="glyphicon glyphicon-phone"></span> 0484/02.00.00</button>
                            </div>
                            <div class="col-md-2">
                                <h5>Prix: <span class="itemPrice">{{ Voitures.prix }} €</span></h5>
                            </div>
                            <div class="col-md-2">
                                <h5>Kilomètres: <span class="itemPrice">{{ Voitures.km }}</span></h5>
                            </div>
                            <div class="col-md-2">
                                <h5>Année: <span class="itemPrice">{{ Voitures.annee }}</span></h5>
                            </div>
                            <div class="col-md-3 ">
                                <button class="btn btn-add-to-cart"><i class="fa fa-envelope" aria-hidden="true"></i></span> Contact</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}