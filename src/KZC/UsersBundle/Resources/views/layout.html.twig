<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}KazemiCars{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"><link href="https://fortawesome.github.io/Font-Awesome/assets/font-awesome/css/font-awesome.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('img/KZC.png') }}" />


</head>
<body class="bg-login">
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        {% if is_granted('ROLE_ADMIN') %}
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Kazemicars</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="{{ path('kzc_homepage2') }}">Home</a></li>
                <li><a href="{{path('kzc_about')}}">A propos</a></li>
                <li><a href="{{path('kzc_list_voitures')}}">Nos voitures</a></li>
                <li><a href="{{'admin'}}">Dashboard</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a style="color: white;"><span class="glyphicon glyphicon-user"></span> Admin</a></li>
                <li><a href="{{path('fos_user_security_logout')}}"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
            </ul>
        {% elseif app.user %}
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Kazemicars</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="{{ path('kzc_homepage2') }}">Home</a></li>
                <li><a href="{{path('kzc_about')}}">A propos</a></li>
                <li><a href="{{path('kzc_list_voitures')}}">Nos voitures</a></li>
                <li><a href="{{path('kzc_evaluate')}}">Evaluez votre voiture</a></li>
                <li><a href="{{path('kzc_contact')}}">Contact</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a style="color: white;"><span class="glyphicon glyphicon-user"></span> {{ app.user.Username }}</a></li>
                <li><a href="{{path('fos_user_security_logout')}}"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
            </ul>
        {% else %}
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Kazemicars</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="{{ path('kzc_homepage2') }}">Home</a></li>
                <li><a href="{{path('kzc_about')}}">A propos</a></li>
                <li><a href="{{path('kzc_list_voitures')}}">Nos voitures</a></li>
                <li><a href="{{path('kzc_contact')}}">Contact</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="{{'register'}}"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                <li><a href="{{'login'}}"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
            </ul>
        {% endif %}
    </div>
</nav>

        <div>
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>

</body>
</html>
